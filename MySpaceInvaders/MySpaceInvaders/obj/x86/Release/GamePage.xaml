<Page
    x:Class="MySpaceInvaders.GamePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MySpaceInvaders"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" >
    <Page.Resources>

    </Page.Resources>
    <Grid x:ConnectionId='1' x:Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:ConnectionId='2' x:Name="LeftArea" Width="2*"/>
            <ColumnDefinition x:ConnectionId='3' x:Name="MiddleArea" Width="12*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" Background="RoyalBlue">
            <Grid.RowDefinitions>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="75"/>
                <RowDefinition Height="75"/>
                <RowDefinition Height="75"/>
            </Grid.RowDefinitions>
            <TextBlock Text="Highscore:" Grid.Row="0" Margin="5,0"/>
            <TextBlock x:ConnectionId='8' x:Name="HighscoreBoard" Grid.Row="0"  Margin="5,32"/>
            <TextBlock x:ConnectionId='9' x:Name="ScoreTitle" Text="Score:" Grid.Row="0" Margin="5,64"/>
            <TextBlock x:ConnectionId='10' x:Name="ScoreBoard" Grid.Row="0" Text="0" Margin="5,73,0,0"/>
            <Button x:ConnectionId='11' x:Name="ExitButton" Visibility="Collapsed"                           Grid.Row="1" Content =" EXIT  " Background ="Gray" VerticalAlignment="TOP" FontSize="35" HorizontalAlignment="Center"></Button>
           
            <MediaElement x:ConnectionId='12' Name="MyMediaElement" AutoPlay="True"/>
            <Grid x:ConnectionId='13' x:Name="UpCanvas" 
                    Grid.Row="2"
                    VerticalAlignment="Bottom" 
                    HorizontalAlignment="Center" 
                                                 
                                                   
                                               >
                <Ellipse x:ConnectionId='20' x:Name="ToUp" Stretch="Uniform" Fill="Azure" Width="75" Height="75"/>
                <Polygon Stroke="Black" Fill="Blue" Stretch="Uniform" Width="75" Height="75"
                         Points="5,40,60,10,60,70" RenderTransformOrigin="0.5,0.5">
                    <Polygon.RenderTransform>
                        <CompositeTransform Rotation="90.044" ScaleY="0.75" ScaleX="0.75"/>
                    </Polygon.RenderTransform>
                </Polygon>
            </Grid>

            <Grid x:ConnectionId='14' x:Name="LeftCanvas" 
                    Grid.Row="3"
                    VerticalAlignment="Bottom" 
                    HorizontalAlignment="Left" 
                                                   
                                                     
                                                 >
                <Ellipse x:ConnectionId='19' x:Name="ToLeft" Stretch="UniformToFill" Fill="Azure" Width="75" Height="75" Margin="0,5,0,0"/>
                <Polygon Stroke="Black" Fill="Blue" Stretch="Uniform" Width="75" Height="75" Margin="0,5,0,0"
                         Points="5,40,60,10,60,70" RenderTransformOrigin="0.5,0.5">
                    <Polygon.RenderTransform>
                        <ScaleTransform ScaleX="0.75" ScaleY="0.75"/>
                    </Polygon.RenderTransform>
                </Polygon>
            </Grid>



            <Grid x:ConnectionId='15' x:Name="RightCanvas" Grid.Row="3"
                    VerticalAlignment="Bottom" 
                    HorizontalAlignment="Right" 
                                                    
                                                      
                                                  >
                <Ellipse x:ConnectionId='18' x:Name="ToRight" Stretch="UniformToFill" Fill="Azure" Width="75" Height="75" Margin="0,5,0,0"/>
                <Polygon Stroke="Black" Fill="Blue" Stretch="Uniform" Width="75" Height="75" Margin="0,5,0,0"
                         Points="75,40,25,10,25,70" RenderTransformOrigin="0.5,0.5">
                    <Polygon.RenderTransform>
                        <ScaleTransform ScaleX="0.75" ScaleY="0.75"/>
                    </Polygon.RenderTransform>
                </Polygon>
            </Grid>

            <Grid x:ConnectionId='16' x:Name="DownCanvas" Grid.Row="4"
              VerticalAlignment="Bottom"
                    HorizontalAlignment="Center" 
                                                   
                                                     
                                                >
                <Ellipse x:ConnectionId='17' x:Name="ToDown" Stretch="Uniform" Fill="Azure" Width="75" Height="75"/>
                <Polygon Stroke="Black" Fill="Blue" Stretch="Uniform" Width="75" Height="75"
                         Points="75,40,25,10,25,70" RenderTransformOrigin="0.5,0.5">
                    <Polygon.RenderTransform>
                        <CompositeTransform Rotation="89.928" ScaleY="0.75" ScaleX="0.75"/>
                    </Polygon.RenderTransform>
                </Polygon>
            </Grid>

        </Grid>


       

        <Canvas x:ConnectionId='4' x:Name="LayoutRoot" 
                Background="Black" 
                Grid.Column="1">
            <local:Ship x:ConnectionId='6' x:Name="Rocket"/>
            <Canvas.Resources>
                <Storyboard x:ConnectionId='7' x:Name="Move"/>
            </Canvas.Resources>
            


        </Canvas>
        
        <Grid x:ConnectionId='5' x:Name="FireButton" Grid.Column="2" 
              VerticalAlignment="Bottom" 
              HorizontalAlignment="Right" 
                             >
            
            <Ellipse Width="100" Height="100" 
                     VerticalAlignment="Top" 
                     HorizontalAlignment="Center">
                <Ellipse.Fill>
                    <LinearGradientBrush>
                        <GradientStop Color="#9AA20000" Offset="1"/>
                        <GradientStop Color="Red"/>
                    </LinearGradientBrush>
                </Ellipse.Fill>
            </Ellipse>
            <Ellipse Width="70" Height="70" 
                     VerticalAlignment="Center" 
                     HorizontalAlignment="Center">
                <Ellipse.Fill>
                    <LinearGradientBrush>
                        <GradientStop Color="#00FF8585" Offset="0"/>
                        <GradientStop Color="#1AFFFFFF" Offset="1"/>
                        <GradientStop Color="#3FF5C2C2" Offset="0.349"/>
                    </LinearGradientBrush>
                </Ellipse.Fill>
            </Ellipse>
        </Grid>


    </Grid>
</Page>

